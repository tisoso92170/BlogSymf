<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css?family=Girassol&display=swap" rel="stylesheet">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bulma.css') }}">
        {% endblock %}
        <nav class="navbar is-danger" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
              <a class="navbar-item" href="https://bulma.io">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
              </a>
          
              <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
              </a>
            </div>
          
            <div id="navbarBasicExample" class="navbar-menu">
              <div class="navbar-start">
                <a class="navbar-item" href="{{ path("home") }}">
                  Accueil
                </a>
          
                <a class="navbar-item" href="{{ path("blog") }}">
                  Mes articles
                </a>
                <a class="navbar-item">
                  Cr√©er un article
                </a>
                </div>
              </div>
          
              <div class="navbar-end">
                <div class="navbar-item">
                  <div class="buttons">
                    {% if app.user %}
                    <a>
                      <strong>Bienvenue : {{ app.user.username }}</strong>
                    </a>
                    <a class="button is-primary" style="margin-left: 20px; color: white;" href="{{ path('app_logout') }}">
                      <strong>Deconnection</strong>
                    </a>
                    {% else %}
                    <a class="button is-primary" href="{{ path('app_login') }}">
                      <strong>Connection</strong>
                    </a>
                    <a class="button is-light" href="{{ path('app_register') }}">
                      Inscription
                    </a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </nav>
    </head>
    <body>
        <div class="container is-fluid" style="margin-top: 20px;">
            {% block body %}
            {% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
